<main>
    {{#if isLogged}}
        <div class="shoes">
            {{#each shoes}}
                {{>shoe}}
            {{else}}
                <h1>No shoes to display. Be the first to create a new offer...</h1>
            {{/each}}
        </div>
    {{else}}
        <div class="container">
            <div class="about-us">
                <div>
                    <img src="/shoes.jpg" alt="image 1">
                    <img src="/shoes2.jpg" alt="image 2">
                </div>
                <p>
                    <a href="/users/register">Register Now</a> and Try it!
                </p>
            </div>
        </div>
    {{/if}}
</main>